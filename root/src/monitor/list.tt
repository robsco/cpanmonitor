<!DOCTYPE HTML>
<html>

	<head>
		<title>Monitoring</title>
	   
		<link rel="stylesheet" href="/static/css/admin.css">
		<meta http-equiv="content-type" content="text/html;charset=UTF-8">
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.min.js"></script>
		<script src="/static/js/timeago.js"></script>
		<script>
			$(function()
			{
				$( 'time' ).timeago();
			});		
		</script>
	</head>

	<body id="monitor">

		[% INCLUDE 'include/header.tt' %]

		<div id="content">
		
			<h2>Monitor</h2>

			<table>
				<tr>
					<th>Distribution</th>
					<th>Author</th>
					<th>Version</th>
					<th>Dev</th>
					<th>Abstract</th>
					<th>Send To</th>
					<th>Checked</th>
					<th>Updated</th>
				</tr>
				
[% FOREACH user_alert IN user_alerts %]
				<tr>
				
					<td>[% user_alert.alert.distribution.replace('-', '::') %]</td>
					<td>[% user_alert.alert.author %]</td>
					<td>[% user_alert.alert.version %]</td>
					<td>[% user_alert.development %]</td>
					<td>[% user_alert.alert.abstract %]</td>
					<td>[% user_alert.email %]</td>
					<td>
						<time datetime="[% user_alert.alert.checked.strftime( '%FT%TZ' ) %]">
							[% format_date( user_alert.alert.checked ) %]
						</time>
					</td>
					<td>
						<time datetime="[% user_alert.alert.updated.strftime( '%FT%TZ' ) %]">
							[% format_date( user_alert.alert.updated ) %]
						</time>
					</td>
				</tr>
[% END %]

			</table>
			
		</div>

[% INCLUDE 'include/footer.tt' %]

	</body>

</html>
